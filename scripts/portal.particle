      accelerationType      static
      accelerationDir       linear
      accelerationMagnitude 150
      acceleration          0 0 -1 0

      radius 0 25.0 0.0
      alpha  0 1.0 0.0
      rotation 0 ~360 -
      bounce 1.0

      lifeTime 1000~1000
    }

    count 4
    delay 0
    period 0 - ~0%
  }
}


